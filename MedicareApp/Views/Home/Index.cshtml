@{
    ViewData["Title"] = "Medicare - Home";
}

<div class="hero-section text-center">
    <!-- Hero Section -->
    <div class="container py-4">
        <h1>Welcome to MediCare Online Healthcare Appointment System</h1>
        <p class="lead">Providing quality healthcare across multiple clinics in Sri Lanka. Book appointments online, connect with doctors, and manage your healthcare with ease.</p>
    </div>
</div>

<div class="container mt-4">
    <!-- Key Features / Hospital Info -->
    <div class="row text-center mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm p-3 h-100">
                <i class="bi bi-building" style="font-size: 2rem;"></i>
                <h4 class="mt-2">Multiple Clinics</h4>
                <p>We operate several clinics offering general medicine, pediatrics, cardiology, dermatology, and more.</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm p-3 h-100">
                <i class="bi bi-person-check" style="font-size: 2rem;"></i>
                <h4 class="mt-2">Experienced Doctors</h4>
                <p>Our team of qualified doctors provides expert consultation and care for every patient.</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm p-3 h-100">
                <i class="bi bi-clock-history" style="font-size: 2rem;"></i>
                <h4 class="mt-2">Convenient Scheduling</h4>
                <p>Book appointments online, view schedules, and reduce waiting times at our clinics.</p>
            </div>
        </div>
    </div>

    <!-- Role Cards -->
    <div class="row text-center">
        <!-- Admin Card -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-lg p-4">
                <h3 class="card-title">Admin</h3>
                <p class="card-text">Manage doctors, patients, and generate summarized reports from existing records.</p>
                <a class="btn btn-primary w-100" href="/Identity/Account/Login">Sign in as Admin</a>
            </div>
        </div>

        <!-- Doctor Card -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-lg p-4">
                <h3 class="card-title">Doctor</h3>
                <p class="card-text">Update profile, view appointments, and manage consultations.</p>
                <a class="btn btn-success w-100" href="/Identity/Account/Login">Sign in as Doctor</a>
            </div>
        </div>

        <!-- Patient Card -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-lg p-4">
                <h3 class="card-title">Patient</h3>
                <p class="card-text">Search doctors, book appointments, and view history.</p>
                <a class="btn btn-info w-100" href="/Identity/Account/Login">Sign in as Patient</a>
            </div>
        </div>
    </div>

    <!-- Contact Info Section -->
    <div class="row text-center mt-4 mb-4">
        <div class="col">
            <h3>Contact Us</h3>
            <p>123 Main Street, Colombo, Sri Lanka | +94 11 234 5678 | info@medicare.lk</p>
            <p>Operating Hours: Mon-Sat 8:00 AM – 6:00 PM</p>
        </div>
    </div>
</div>
