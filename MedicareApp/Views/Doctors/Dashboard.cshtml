@model MedicareApp.Models.Doctor

@{
    ViewData["Title"] = "Doctor Dashboard";
}

<h2>Welcome, Dr. @Model.Name</h2>
<hr />

<p><strong>Specialty:</strong> @Model.Specialty</p>
<p><strong>Availability:</strong> @Model.Availability</p>
<p><strong>Consultation Fee:</strong> @Model.Fees</p>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.DoctorID" class="btn btn-primary">Edit Profile</a>
    <a asp-action="MyAppointments" class="btn btn-success">View My Appointments</a>
</div>
