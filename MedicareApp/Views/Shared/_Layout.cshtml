@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicareApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicareApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MedicareApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Admin Menu -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Doctors" asp-action="Index">Doctors</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Patients" asp-action="Index">Patients</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Appointments</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Payments" asp-action="Index">Payments</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Feedbacks" asp-action="Index">Feedbacks</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Reports" asp-action="Index">Reports</a></li>

                            <!-- ✅ Added -->
                        }

                        else if (User.IsInRole("Patient"))
                        {
                            <!-- Patient Menu -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Patients" asp-action="Dashboard">My Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">My Appointments</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Appointments" asp-action="Book">Book Appointment</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Feedbacks" asp-action="MyFeedbacks">Give Feedbacks</a></li>
                        }

                        else if (User.IsInRole("Doctor"))
                        {
                            <!-- Doctor Menu -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Doctors" asp-action="Dashboard">My Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Doctors" asp-action="MyAppointments">Scheduled Appointments</a></li>
                        }
                    </ul>

                    <!-- Right side: Logout button when signed in -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MedicareApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
