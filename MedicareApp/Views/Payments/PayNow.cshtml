@model MedicareApp.Models.Payment

@{
    ViewData["Title"] = "Pay Now";
    var methods = new List<string> { "Cash", "Credit Card", "Debit Card" };
}

<h2>Pay Now</h2>
<hr />

<form asp-action="PayNow" asp-controller="Payments" method="post">
    @Html.AntiForgeryToken()

    <!-- AppointmentID must be present -->
    <input type="hidden" asp-for="AppointmentID" />

    <!-- Amount -->
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" readonly />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <!-- Method -->
    <div class="form-group mt-3">
        <label asp-for="Method" class="control-label"></label>
        <select asp-for="Method" class="form-control">
            @foreach (var method in methods)
            {
                <option value="@method" selected="@(Model.Method == method)">
                    @method
                </option>
            }
        </select>
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>

    <!-- Date -->
    <div class="form-group mt-3">
        <label asp-for="Date" class="control-label"></label>
        <input class="form-control"
               type="datetime-local"
               name="Date"
               value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")"
               readonly />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Confirm Payment</button>
        <a asp-controller="Appointments" asp-action="MyAppointments" class="btn btn-secondary">Cancel</a>
    </div>
</form>
