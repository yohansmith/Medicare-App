@model MedicareApp.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
    var methods = ViewData["Methods"] as List<string>;
}

<h2>Create Payment</h2>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Method" class="control-label"></label>
        <select asp-for="Method" class="form-control">
            <option value="">-- Select Payment Method --</option>
            @foreach (var method in methods)
            {
                <option value="@method">@method</option>
            }
        </select>
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AppointmentID" class="control-label"></label>
        <input asp-for="AppointmentID" class="form-control" />
        <span asp-validation-for="AppointmentID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
</form>
